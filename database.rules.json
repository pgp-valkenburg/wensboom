{
  "rules": {
    ".read": false,
    ".write": false,
    "wishCount": {
      ".read": "auth.uid !== null",
      ".write": "auth.uid !== null"
    },
    "wishes": {
      ".read": "auth.uid !== null",
      ".write": "auth.uid !== null",
      ".indexOn": "approved",
      "$wish": {
        "body": { ".validate": true },
        "approved": { ".validate": true },
        "$other": { ".validate": false }
      }
    }
  }
}
